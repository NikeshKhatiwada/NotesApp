@model NotesApp.Models.NoteItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>NoteItem</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" action="/NoteItems/Edit/@Model.Id">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" value="@Model.Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="8">@Model.Description</textarea>
                <script>
                    const easyMDE = new EasyMDE();
                </script>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-2">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/">Go Back</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
